@model ApiStatusDetailsViewModel
@{
    ViewData["Title"] = "API Status";

    string StatusLabel(LocalSeo.Web.Services.ApiHealthStatus status)
    {
        return status switch
        {
            LocalSeo.Web.Services.ApiHealthStatus.Up => "Up",
            LocalSeo.Web.Services.ApiHealthStatus.Degraded => "Degraded",
            LocalSeo.Web.Services.ApiHealthStatus.Down => "Down",
            _ => "Unknown"
        };
    }

    string StatusCss(LocalSeo.Web.Services.ApiHealthStatus status)
    {
        return status switch
        {
            LocalSeo.Web.Services.ApiHealthStatus.Up => "status-healthy",
            LocalSeo.Web.Services.ApiHealthStatus.Degraded => "status-pending",
            LocalSeo.Web.Services.ApiHealthStatus.Down => "status-error",
            _ => "status-nodata"
        };
    }

    string Relative(DateTime? checkedUtc)
    {
        if (!checkedUtc.HasValue)
            return "Never";

        var span = DateTime.UtcNow - checkedUtc.Value;
        if (span.TotalSeconds < 60)
            return $"{Math.Max(1, (int)Math.Floor(span.TotalSeconds))}s ago";
        if (span.TotalMinutes < 60)
            return $"{Math.Max(1, (int)Math.Floor(span.TotalMinutes))}m ago";
        if (span.TotalHours < 24)
            return $"{Math.Max(1, (int)Math.Floor(span.TotalHours))}h ago";
        return $"{Math.Max(1, (int)Math.Floor(span.TotalDays))}d ago";
    }
}

<div class="page-stack">
    <section class="card">
        <div class="card-header">
            <h2 class="card-title">API Status Checks</h2>
            <a class="btn btn-secondary" href="/">Back to Home</a>
        </div>

        <form method="get" class="inline-filter-line">
            <div class="form-row">
                <label for="category">Category</label>
                <select id="category" name="category">
                    <option value="">All</option>
                    @foreach (var category in Model.CategoryOptions)
                    {
                        <option value="@category" selected="@(string.Equals(Model.SelectedCategory, category, StringComparison.OrdinalIgnoreCase))">@category</option>
                    }
                </select>
            </div>
            <div class="form-row">
                <label for="q">Search</label>
                <input id="q" name="q" type="text" value="@Model.Search" maxlength="120" placeholder="Name, key, or message" />
            </div>
            <div class="form-row inline-filter-actions">
                <button type="submit">Apply</button>
            </div>
        </form>

        <div class="table-wrap">
            <table>
                <thead>
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Status</th>
                        <th>Checked</th>
                        <th>Latency</th>
                        <th>Message</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model.Rows.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="muted">No checks match the current filters.</td>
                    </tr>
                }
                else
                {
                    @foreach (var row in Model.Rows)
                    {
                        <tr>
                            <td>@row.Category</td>
                            <td>
                                <div>@row.DisplayName</div>
                                <div class="muted"><code>@row.Key</code></div>
                            </td>
                            <td><span class="status-pill @StatusCss(row.Status)">@StatusLabel(row.Status)</span></td>
                            <td title="@(row.CheckedUtc?.ToString("yyyy-MM-dd HH:mm:ss 'UTC'") ?? "Never")">
                                @if (row.CheckedUtc.HasValue)
                                {
                                    <span>@row.CheckedUtc.Value.ToString("dd MMM yyyy HH:mm")</span>
                                    <span class="muted">(@Relative(row.CheckedUtc))</span>
                                }
                                else
                                {
                                    <span class="muted">Never</span>
                                }
                            </td>
                            <td>@(row.LatencyMs.HasValue ? $"{row.LatencyMs.Value} ms" : "N/A")</td>
                            <td>@(string.IsNullOrWhiteSpace(row.Message) ? "N/A" : row.Message)</td>
                        </tr>
                    }
                }
                </tbody>
            </table>
        </div>
    </section>
</div>

