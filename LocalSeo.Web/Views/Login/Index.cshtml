@model LoginRequestModel
@{
    ViewData["Title"] = "Local SEO Login";
    var message = (string?)ViewBag.Message;
}
<div class="login-card card">
    <h2 class="card-title">Kontrolit Local Seo Login</h2>
    <div class="login-brand">
        <img class="login-brand-logo" src="/assets/images/logo.svg" alt="Kontrolit" />
        <h2 class="card-title">Local SEO Login</h2>
    </div>

    @if (!string.IsNullOrWhiteSpace(message))
    {
        <div class="notice">@message</div>
    }

    <p class="muted">Sign in with your email and password.</p>
    <form method="post" action="/login" class="form-grid">
        @Html.AntiForgeryToken()
        <div class="form-row">
            <label for="email-input">Email</label>
            <input id="email-input" name="Email" type="email" value="@Model.Email" autocomplete="email" required />
        </div>
        <div class="form-row">
            <label for="password-input">Password</label>
            <input id="password-input" name="Password" type="password" autocomplete="current-password" required />
        </div>
        <div class="login-actions">
            <button type="submit">Continue</button>
        </div>
    </form>
    <p class="muted">
        <a href="/forgot-password">Forgot password?</a>
    </p>
</div>
