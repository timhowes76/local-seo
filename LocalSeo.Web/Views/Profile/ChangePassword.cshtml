@model ChangePasswordStartViewModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="card" style="max-width:720px;">
    <h2 class="card-title">Change Password</h2>

    @if (!string.IsNullOrWhiteSpace(Model.Message))
    {
        <div class="notice">@Model.Message</div>
    }

    <p class="muted">Confirm your current password to begin. We will email a one-time code before your password can be changed.</p>

    <form method="post" action="/profile/change-password/start" class="form-grid">
        @Html.AntiForgeryToken()
        <div class="form-row">
            <label for="cp-current-password">Current password</label>
            @await Html.PartialAsync("_PasswordInput", new PasswordInputModel
            {
                Id = "cp-current-password",
                Name = "CurrentPassword",
                Autocomplete = "current-password",
                Required = true
            })
        </div>
        <div class="toolbar">
            <button type="submit">Continue</button>
        </div>
    </form>
</div>
