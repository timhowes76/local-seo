@{
    ViewData["Title"] = "Logs";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <div class="card-header settings-header">
            <h2 class="card-title">Logs</h2>
            <a href="/admin" class="btn btn-secondary">Back to Admin</a>
        </div>
        <div class="home-nav-grid admin-nav-grid">
            <a href="/admin/logs/login-log" class="home-nav-card">
                <i class="bi bi-shield-lock home-nav-icon"></i>
                <span class="home-nav-title">Login Log</span>
                <span class="home-nav-subtitle">Review successful and failed login attempts by email and IP.</span>
            </a>
            <a href="/admin/logs/emails" class="home-nav-card">
                <i class="bi bi-envelope-open home-nav-icon"></i>
                <span class="home-nav-title">Email Log</span>
                <span class="home-nav-subtitle">Review outbound emails, provider events, and failures.</span>
            </a>
            <a href="/admin/dataforseo-tasks" class="home-nav-card">
                <i class="bi bi-list-task home-nav-icon"></i>
                <span class="home-nav-title">DataForSEO Tasks</span>
                <span class="home-nav-subtitle">Monitor async task lifecycle and import status.</span>
            </a>
        </div>
    </section>
</div>
