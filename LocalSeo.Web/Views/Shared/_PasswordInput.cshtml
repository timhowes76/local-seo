@model PasswordInputModel
@{
    var classes = (Model.CssClass ?? string.Empty).Trim();
    if (!classes.Contains("js-password-toggle", StringComparison.Ordinal))
        classes = string.IsNullOrWhiteSpace(classes) ? "js-password-toggle" : $"{classes} js-password-toggle";
}
<div class="password-toggle-wrap">
    <input
        id="@Model.Id"
        name="@Model.Name"
        type="password"
        class="@classes"
        value="@Model.Value"
        autocomplete="@Model.Autocomplete"
        inputmode="@Model.InputMode"
        pattern="@Model.Pattern"
        maxlength="@Model.MaxLength"
        placeholder="@Model.Placeholder"
        @(Model.Required ? "required" : null) />
    <button type="button" class="password-toggle-btn">
        <i class="bi bi-eye"></i>
    </button>
</div>
