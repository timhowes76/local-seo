@{
    ViewData["Title"] = "Data Lists";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <div class="card-header settings-header">
            <h2 class="card-title">Data Lists</h2>
            <a href="/admin" class="btn btn-secondary">Back to Admin</a>
        </div>
        <div class="home-nav-grid admin-nav-grid">
            <a href="/admin/data-lists/counties-gb" class="home-nav-card">
                <i class="bi bi-map home-nav-icon"></i>
                <span class="home-nav-title">Counties (GB)</span>
                <span class="home-nav-subtitle">Manage UK counties used for local targeting lists.</span>
            </a>
            <a href="/admin/data-lists/towns-gb" class="home-nav-card">
                <i class="bi bi-geo-alt home-nav-icon"></i>
                <span class="home-nav-title">Towns (GB)</span>
                <span class="home-nav-subtitle">Manage UK towns linked to counties, including coordinates.</span>
            </a>
            <a href="/admin/data-lists/google-business-profile-categories" class="home-nav-card">
                <i class="bi bi-tags home-nav-icon"></i>
                <span class="home-nav-title">GBP Categories</span>
                <span class="home-nav-subtitle">Manage canonical GBP category IDs and display names.</span>
            </a>
        </div>
    </section>
</div>
