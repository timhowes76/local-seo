@{
    ViewData["Title"] = "Data Lists";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <div class="toolbar">
            <a href="/admin" class="btn btn-secondary">Back to Admin</a>
        </div>
    </section>

    <section class="card">
        <h2 class="card-title">Counties (GB)</h2>
        <p class="muted">Manage UK counties used for local targeting lists.</p>
        <a href="/admin/data-lists/counties-gb" class="btn btn-secondary">Open Counties</a>
    </section>

    <section class="card">
        <h2 class="card-title">Towns (GB)</h2>
        <p class="muted">Manage UK towns linked to counties, including optional coordinates.</p>
        <a href="/admin/data-lists/towns-gb" class="btn btn-secondary">Open Towns</a>
    </section>

    <section class="card">
        <h2 class="card-title">Google Business Profile Categories</h2>
        <p class="muted">Manage canonical GBP category IDs and localized display names.</p>
        <a href="/admin/data-lists/google-business-profile-categories" class="btn btn-secondary">Open Categories</a>
    </section>
</div>
