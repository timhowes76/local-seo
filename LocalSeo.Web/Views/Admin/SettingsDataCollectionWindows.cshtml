@model AdminDataCollectionWindowsSettingsModel
@{
    ViewData["Title"] = "Data Collection Windows";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <div class="card-header">
            <h2 class="card-title">Data Collection Windows</h2>
            <a class="btn btn-secondary" href="/admin/settings">Back to Settings</a>
        </div>

        <form method="post" action="/admin/settings/data-collection-windows" class="form-grid">
            @Html.AntiForgeryToken()

            <div class="form-row">
                <label for="EnhancedGoogleDataRefreshHours">Number of hours before attempting Google Enhanced Data collection</label>
                <input id="EnhancedGoogleDataRefreshHours" name="EnhancedGoogleDataRefreshHours" type="number" min="0" step="1" value="@Model.EnhancedGoogleDataRefreshHours" />
                @Html.ValidationMessage(nameof(Model.EnhancedGoogleDataRefreshHours))
            </div>

            <div class="form-row">
                <label for="GoogleReviewsRefreshHours">Number of hours before attempting Google Review collection</label>
                <input id="GoogleReviewsRefreshHours" name="GoogleReviewsRefreshHours" type="number" min="0" step="1" value="@Model.GoogleReviewsRefreshHours" />
                @Html.ValidationMessage(nameof(Model.GoogleReviewsRefreshHours))
            </div>

            <div class="form-row">
                <label for="GoogleUpdatesRefreshHours">Number of hours before attempting Google Updates collection</label>
                <input id="GoogleUpdatesRefreshHours" name="GoogleUpdatesRefreshHours" type="number" min="0" step="1" value="@Model.GoogleUpdatesRefreshHours" />
                @Html.ValidationMessage(nameof(Model.GoogleUpdatesRefreshHours))
            </div>

            <div class="form-row">
                <label for="GoogleQuestionsAndAnswersRefreshHours">Number of hours before attempting Google Question &amp; Answers collection</label>
                <input id="GoogleQuestionsAndAnswersRefreshHours" name="GoogleQuestionsAndAnswersRefreshHours" type="number" min="0" step="1" value="@Model.GoogleQuestionsAndAnswersRefreshHours" />
                @Html.ValidationMessage(nameof(Model.GoogleQuestionsAndAnswersRefreshHours))
            </div>

            <div class="form-row">
                <label for="GoogleSocialProfilesRefreshHours">Number of hours before attempting Google Social Profile collection</label>
                <input id="GoogleSocialProfilesRefreshHours" name="GoogleSocialProfilesRefreshHours" type="number" min="0" step="1" value="@Model.GoogleSocialProfilesRefreshHours" />
                @Html.ValidationMessage(nameof(Model.GoogleSocialProfilesRefreshHours))
            </div>

            <div class="form-row">
                <label for="AppleBingRefreshHours">Number of hours before attempting Apple/Bing collection</label>
                <input id="AppleBingRefreshHours" name="AppleBingRefreshHours" type="number" min="0" step="1" value="@Model.AppleBingRefreshHours" />
                @Html.ValidationMessage(nameof(Model.AppleBingRefreshHours))
            </div>

            <div class="form-row">
                <label for="SearchVolumeRefreshCooldownDays">Search Volume Refresh Cooldown (Days)</label>
                <input id="SearchVolumeRefreshCooldownDays" name="SearchVolumeRefreshCooldownDays" type="number" min="0" step="1" value="@Model.SearchVolumeRefreshCooldownDays" />
                @Html.ValidationMessage(nameof(Model.SearchVolumeRefreshCooldownDays))
            </div>

            <div class="toolbar">
                <button type="submit">Save Settings</button>
            </div>
        </form>
    </section>
</div>
