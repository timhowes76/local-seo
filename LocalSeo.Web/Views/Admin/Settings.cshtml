@{
    ViewData["Title"] = "Settings";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <div class="card-header">
            <h2 class="card-title">Settings</h2>
            <a class="btn btn-secondary" href="/admin">Back to Admin</a>
        </div>
        <div class="home-nav-grid">
            <a href="/admin/settings/site" class="home-nav-card">
                <i class="bi bi-globe2 home-nav-icon"></i>
                <span class="home-nav-title">Site</span>
                <span class="home-nav-subtitle">Manage base site URL settings.</span>
            </a>
            <a href="/admin/settings/data-collection-windows" class="home-nav-card">
                <i class="bi bi-clock-history home-nav-icon"></i>
                <span class="home-nav-title">Data Collection Windows</span>
                <span class="home-nav-subtitle">Configure refresh windows and cooldowns.</span>
            </a>
            <a href="/admin/settings/map-pack-ctr-model" class="home-nav-card">
                <i class="bi bi-bar-chart-steps home-nav-icon"></i>
                <span class="home-nav-title">Map Pack CTR Model</span>
                <span class="home-nav-subtitle">Configure map pack click-share assumptions.</span>
            </a>
            <a href="/admin/settings/zoho-lead-defaults" class="home-nav-card">
                <i class="bi bi-person-vcard home-nav-icon"></i>
                <span class="home-nav-title">Zoho Lead Defaults</span>
                <span class="home-nav-subtitle">Set default owner and next action values.</span>
            </a>
        </div>
    </section>
</div>
