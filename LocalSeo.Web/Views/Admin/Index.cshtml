<h2>Admin</h2>

@if (TempData["Status"] != null)
{
    <div>@TempData["Status"]</div>
}

<p><a href="/admin/dataforseo-tasks">DataForSEO Tasks</a></p>

<p>Clear all stored run history from the app database.</p>
<p>This deletes all rows from <code>DataForSeoReviewTask</code>, <code>PlaceReview</code>, <code>SearchRun</code>, <code>PlaceSnapshot</code>, and <code>Place</code>.</p>

<form method="post" action="/admin/clear-runs" onsubmit="return confirm('Clear all run data? This cannot be undone.');">
    @Html.AntiForgeryToken()
    <button type="submit">Clear All Run Data</button>
</form>
