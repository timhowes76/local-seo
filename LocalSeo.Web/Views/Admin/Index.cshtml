@{
    ViewData["Title"] = "Admin";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <h2 class="card-title">Admin</h2>
        <div class="home-nav-grid admin-nav-grid">
            <a href="/admin/data-lists" class="home-nav-card">
                <i class="bi bi-table home-nav-icon"></i>
                <span class="home-nav-title">Data Lists</span>
                <span class="home-nav-subtitle">Manage admin-maintained data lists and category dictionaries.</span>
            </a>
            <a href="/admin/settings" class="home-nav-card">
                <i class="bi bi-sliders home-nav-icon"></i>
                <span class="home-nav-title">Settings</span>
                <span class="home-nav-subtitle">Configure site, collection windows, map pack CTR model, and defaults.</span>
            </a>
            <a href="/admin/users" class="home-nav-card">
                <i class="bi bi-people home-nav-icon"></i>
                <span class="home-nav-title">Users</span>
                <span class="home-nav-subtitle">Review user accounts and account status.</span>
            </a>
            <a href="/admin/logs" class="home-nav-card">
                <i class="bi bi-journal-text home-nav-icon"></i>
                <span class="home-nav-title">Logs</span>
                <span class="home-nav-subtitle">Review login logs, email logs, and DataForSEO task logs.</span>
            </a>
            <a href="/admin/errors" class="home-nav-card">
                <i class="bi bi-bug home-nav-icon"></i>
                <span class="home-nav-title">Errors</span>
                <span class="home-nav-subtitle">Review and investigate HTTP 500 errors and background failures.</span>
            </a>
            <a href="/admin/announcements" class="home-nav-card">
                <i class="bi bi-megaphone home-nav-icon"></i>
                <span class="home-nav-title">Announcements</span>
                <span class="home-nav-subtitle">Create and manage global announcements and read tracking.</span>
            </a>
            <a href="/admin/email-templates" class="home-nav-card">
                <i class="bi bi-envelope-paper home-nav-icon"></i>
                <span class="home-nav-title">Email Templates</span>
                <span class="home-nav-subtitle">Manage tokenized templates used for outbound emails.</span>
            </a>
        </div>
    </section>
</div>
