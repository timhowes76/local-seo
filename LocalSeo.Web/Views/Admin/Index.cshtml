@{
    ViewData["Title"] = "Admin";
    var statusMessage = TempData["Status"] as string;
}

<div class="page-stack">
    @if (!string.IsNullOrWhiteSpace(statusMessage))
    {
        <div class="notice">@statusMessage</div>
    }

    <section class="card">
        <h2 class="card-title">Data Lists</h2>
        <p class="muted">Manage admin-maintained data lists and category dictionaries.</p>
        <a href="/admin/data-lists" class="btn btn-secondary">Open Data Lists</a>
    </section>

    <section class="card">
        <h2 class="card-title">DataForSEO</h2>
        <p class="muted">Monitor async task lifecycle and import status.</p>
        <a href="/admin/dataforseo-tasks" class="btn btn-secondary">Open DataForSEO Tasks</a>
    </section>

    <section class="card">
        <h2 class="card-title">Settings</h2>
        <p class="muted">Configure site, collection windows, map pack CTR model, and Zoho lead defaults.</p>
        <a href="/admin/settings" class="btn btn-secondary">Open Settings</a>
    </section>

    <section class="card">
        <h2 class="card-title">Users</h2>
        <p class="muted">Review user accounts and account status.</p>
        <a href="/admin/users" class="btn btn-secondary">Open Users</a>
    </section>

    <section class="card">
        <h2 class="card-title">Logs</h2>
        <p class="muted">Inspect authentication activity and audit login attempts.</p>
        <a href="/admin/logs" class="btn btn-secondary">Open Logs</a>
    </section>

</div>
