@model LocalSeo.Web.Models.PasswordResetEmailModel
<h1 style="margin:0 0 12px 0;font-size:22px;line-height:1.3;color:#111827;">Reset your password</h1>
<p style="margin:0 0 14px 0;">Hi @(string.IsNullOrWhiteSpace(Model.RecipientName) ? "there" : Model.RecipientName),</p>
<p style="margin:0 0 18px 0;">Use the button below to reset your password.</p>
<p style="margin:0 0 18px 0;">
  <a href="@Model.ResetUrl" style="display:inline-block;padding:12px 18px;background:#2563eb;color:#ffffff;text-decoration:none;border-radius:4px;">Reset Password</a>
</p>
<p style="margin:0;">If you did not request this, you can ignore this email.</p>